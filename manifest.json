{
  "name": "YapiToTs",
  "description": "将yapi文档一键转换成ts定义",
  "version": "1.0",
  "manifest_version": 3,  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "webRequest"
  ],
  "host_permissions":[
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
